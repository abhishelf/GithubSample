<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_item_layout">
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">14dp</item>
    </style>

    <style name="list_item_text">
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="list_item_user_avatar">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
    </style>

    <style name="list_item_username" parent="list_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:lineHeight">21dp</item>
    </style>

    <style name="list_item_title" parent="list_item_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight">16dp</item>
    </style>

    <style name="list_item_date" parent="list_item_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textColorHint</item>
        <item name="android:lineHeight">14dp</item>
    </style>
</resources>